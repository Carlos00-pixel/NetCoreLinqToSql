@model List<Empleado>

<a asp-controller="Empleados" asp-action="BuscadorEmpleados">Buscar Empleados</a>

<div style="text-align:center; margin: 0 auto">
    <h1>Empleados LINQ To SQL</h1>
    <table class="table table-info">
        <thead>
            <tr>
                <th>APELLIDO</th>
                <th>OFICIO</th>
                <th>DETALLES</th>
            </tr>
        </thead>
        <tbody>
        @foreach(Empleado emp in Model)
        {
            <tr>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>
                    <a asp-controller="Empleados" asp-action="Details"
                    asp-route-id="@emp.IdEmpleado" class="btn btn-outline-danger">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>